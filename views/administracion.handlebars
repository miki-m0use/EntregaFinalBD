            <!-- Modulo para la edicion de prodcutos, directo a la base de datos -->
    <div class="modal fade" id="editarProductoModal" tabindex="-1" aria-labelledby="editarProductoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarProductoLabel">Editar Producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">

                    <form id="editarProductoForm" action="/productos/editar/{{this.id}}" method="POST">
                        <input type="hidden"  name="_method" value="PUT"> <!-- Usar un campo oculto para indicar el método -->
                        <input type="text" id="editarNombreProducto" name="nombreProducto" value="{{this.titulo}}" placeholder="Nombre del Producto" required>
                        <input type="text" id="editarAutorProducto" name="autorProducto" value="{{this.autor}}" placeholder="Autor" required>
                        <input type="number" id="editarPrecioProducto" name="precioProducto" value="{{this.precio}}" placeholder="Precio" required>
                        <input type="text" id="editarImagenProducto" name="imagenProducto" placeholder="URL de la Imagen" required>
                        <input type="number"  id="editarStockProducto" name="stockProducto" value="{{this.stock}}" placeholder="Stock" required>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </form>

                </div>
                </div>
            </div>
        </div>


