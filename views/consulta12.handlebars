<main>
    <h2>Historial de Uso del Equipo MÃ©dico</h2>

    <form action="/consulta12" method="get">
        <label for="idEquipo">ID del Equipo:</label>
        <input type="number" id="idEquipo" name="idEquipo" value="{{idEquipo}}" required />
        <button type="submit">Buscar</button>
    </form>

    {{#if error}}
        <p style="color: red;">{{error}}</p>
    {{/if}}

    {{#if historial}}
        <h3>Historial del Equipo ID: {{idEquipo}}</h3>

        <br>
                {{#each historial}}
                        <p style="color: black; font-weight: bold; display: inline;">ID del Equipo : </p> {{this.id_equipo}} <br>
                        <p style="color: black; font-weight: bold; display: inline;">Fecha del Uso : </p>{{this.fecha_cita}} <br>
                        <p style="color: black; font-weight: bold; display: inline;">Hora de la cita en que se uso : </p>{{this.hora_cita}}<br>
                        <p style="color: black; font-weight: bold; display: inline;">Nombre del Paciente : </p>{{this.nombre_paciente}}<br>
                        <p style="color: black; font-weight: bold; display: inline;">Nombre del Medico a cargo de la Cita : </p>{{this.nombre_medico}}<br>
                    
                {{/each}}
            
    {{else}}
        <p>No se encontraron registros para este equipo.</p>
    {{/if}}


</main>